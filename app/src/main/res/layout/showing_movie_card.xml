<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="150dp">

        <com.example.administrator.imovie.views.common.CircularBeadImageView
            android:id="@+id/showing_movie_poster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:rid="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/showing_movie_test" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/want_to_see_bg"
            android:background="@drawable/want_to_see_bg"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp">
            <ImageView
                android:id="@+id/want_to_see"
                android:src="@drawable/want_to_see_default"
                android:layout_centerInParent="true"
                android:layout_width="12dp"
                android:layout_height="12dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAX3D"
            android:padding="1dp"
            android:layout_margin="2dp"
            android:textSize="12dp"
            android:textColor="@color/label_text_color"
            android:background="@drawable/label_background" />

        <TextView
            android:id="@+id/showing_movie_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="1dp"
            android:text="7.7"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="15dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/want_to_see_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="1dp"
            android:textStyle="bold"
            android:text="610771人想看"
            android:textColor="@color/orange"
            android:textSize="12dp" />

    </RelativeLayout>

    <TextView
        android:layout_marginBottom="2dp"
        android:id="@+id/showing_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:textColor="@android:color/black"
        android:padding="2dp"
        android:text="蜘蛛侠:英雄归来"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/release_date"
        android:text="2月16日"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.example.administrator.imovie.views.common.NewJZVideoPlayerStandard
        android:id="@+id/trailer_player"
        android:layout_width="match_parent"
        android:layout_height="202dp"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.administrator.imovie.views.common.RoundImageView
            android:id="@+id/image"
            android:src="@drawable/night_sky_bg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:color="@color/white"
            app:margin="0.5"
            app:width="5"
            app:style="1" />

        <TextView
            android:id="@+id/trailer_title"
            android:textSize="15dp"
            android:text="123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image"
            android:layout_toLeftOf="@+id/l1" />
        <LinearLayout
            android:id="@+id/l1"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/follow"
                android:background="@color/transparent"
                android:src="@drawable/follow"
                android:scaleType="fitCenter"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageButton
                android:id="@+id/like"
                android:scaleType="fitCenter"
                android:background="@color/transparent"
                android:src="@drawable/collect_default"
                android:padding="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>